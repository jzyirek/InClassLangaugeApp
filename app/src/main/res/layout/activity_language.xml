<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.admin.languageapp.LanguageActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/LanguageSelectionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LanguageSelectLabel"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="@+id/radioGroup2"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintHorizontal_bias="0.462" />

    <ImageButton
        android:id="@+id/TranslateButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/radioGroup2"
        app:layout_constraintTop_toBottomOf="@+id/LanguageSelectionId"
        app:layout_constraintVertical_bias="0.529"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="384dp"
        android:layout_height="234dp"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/cat"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/OutputViewId"
        android:layout_width="353dp"
        android:layout_height="61dp"
        android:text="@string/OutputView"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="169dp"
        android:layout_height="128dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <!--android:duplicateParentState="false"-->
        <!--android:layout_marginBottom="11dp"-->
        <!--android:layout_weight="0.01"-->
        <!--app:layout_constraintBottom_toTopOf="@+id/SpanishRadioId"-->
        <!--app:layout_constraintLeft_toLeftOf="@+id/SpanishRadioId"-->
        <!--app:layout_constraintRight_toRightOf="@+id/SpanishRadioId"-->
        <!--app:layout_constraintTop_toTopOf="@+id/LanguageSelectionId"-->
        <!--tools:layout_constraintBottom_creator="1"-->
        <!--tools:layout_constraintLeft_creator="1"-->
        <!--tools:layout_constraintRight_creator="1"-->
        <!--tools:layout_constraintTop_creator="1" />-->

        <RadioButton
            android:id="@+id/EnglishRadioId"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="22dp"
            android:checked="true"
            android:text="@string/RadioEnglish" />

        <RadioButton
            android:id="@+id/SpanishRadioId"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="22dp"
            android:text="@string/SpanishRadio" />

        <!--android:layout_marginTop="22dp"-->
        <!--android:layout_weight="0.15"-->
        <!--app:layout_constraintLeft_toRightOf="@+id/LanguageSelectionId"-->
        <!--app:layout_constraintTop_toTopOf="@+id/imageView"-->
        <!--tools:layout_constraintLeft_creator="1"-->
        <!--tools:layout_constraintTop_creator="1" />-->
    </RadioGroup>

</android.support.constraint.ConstraintLayout>